<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">


	<ImageView android:id="@+id/img_fix"
	    android:src="@drawable/cameralist_settting_button" 
		android:layout_width="80dp"
		
		android:layout_height="60dp" 
		android:layout_margin="3dp"/>

	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content"	 
		android:layout_height="wrap_content">

		<TextView android:id="@+id/content_fix"
			
			android:layout_width="wrap_content"
			android:layout_height="40dp" 
			android:textColor="#684F2C"
			android:text="哈哈哈哈哈"
			android:textSize="18sp" />
		<TextView android:id="@+id/sender_fix"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#684F2C"
			android:text="哈哈哈哈哈"
			android:textSize="15sp" />
		<TextView 
		    android:visibility="gone"
		    android:id="@+id/sendertel_fix"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#684F2C"
			android:text="哈哈哈哈哈"
			android:textSize="15sp" />
		<TextView 
		    android:visibility="gone"
		    android:id="@+id/senderaddress_fix"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#684F2C"
			android:text="哈哈哈哈哈"
			android:textSize="15sp" />
		<TextView 
		    android:visibility="gone"
		    android:id="@+id/handleid_fix"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#684F2C"
			android:text="哈哈哈哈哈"
			android:textSize="15sp" />
		<TextView 
		    android:visibility="gone"
		    android:id="@+id/submittime_fix"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#684F2C"
			android:text="哈哈哈哈哈"
			android:textSize="15sp" />

	</LinearLayout>


</LinearLayout>
